<div style='margin-bottom:20px;'>
	<p style='margin:10px 0;'>
		<a href='/'>首页</a>/<a href='#'>我的订单</a>
	</p>
	<img src=<%= image_path('spree/frontend/line_right.png') %>>
</div>
<div style="font-size:13px;width:960px;margin:0 auto;font-family: tahoma,arial,sans-serif;">

<div id='addrLeftPartDiv'>
	<ul>
		<li class='headLi'>会员中心</li>
		<li class='childLi firstChildLi'>
			<a href='#'>会员中心</a>
		</li>
		<li class='childLi lastChildLi'>
			<a href='#'>积分商城</a>
		</li>
		<li class='headLi'>交易管理</li>
		<li class='childLi firstChildLi'>
			<a href='/orderHistory'>我的订单</a>
		</li>
		<li class='childLi'>
			<a href='#'>我的收藏</a>
		</li>
		<li class='childLi lastChildLi'>
			<a href='#'>我的评价</a>
		</li>
		<li class='headLi'>账户管理</li>
		<li class='childLi firstChildLi'>
			<a href='/personal_information'>修改个人资料</a>
		</li>
		<li class='childLi'>
			<a href='#'>修改密码</a>
		</li>
		<li class='childLi lastChildLi'>
			<a href='/addressedit'>收货地址簿</a>
		</li>
		<li class='headLi'>服务中心</li>
		<li class='childLi firstChildLi lastChildLi'>
			<a href='#'>退换货政策</a>
		</li>
	</ul>
</div>

<div class="right" style="border:1px solid #D3D3D3;">
<span><select id='timeSelector' style="margin-top: 10px;margin-left: 580px;border-color: #D3D3D3;">
<option value="1">最近一个月的订单</option>
<option value="3">最近三个月的订单</option>
<option value="0">全部订单</option>
</select></span>

<% if current_spree_user %>
	<% current_spree_user.orders.each do |order| %>
		<% if order.payment_state %>
			<div class="myorder" interval_time=<%= (Time.now - order.created_at).to_i %>>
			<table>
			<tr style="height:30px;text-align: center;">
			<td style="text-align:center;width:90px;">订单编号</td>
			<td style="text-align:center;width:90px;">订单商品</td>
			<td style="text-align:center;width:60px;">会员名</td>
			<td style="text-align:center;width:90px;">订单金额</td>
			<td style="text-align:center;width:90px;">下单时间</td>
			<td style="text-align:center;width:90px;">订单状态</td>
			<td style="text-align:center;width:50px;">操作</td>
			</tr>
			<tr style="height:150px;text-align: center;">
			<td style="text-align: left;padding-left: 20px;"><%=order.number%></td>
			<td>
				<%order.line_items.take(3).each do |line_item|%>
					<%=line_item.name%><br>
				<%end%>
			</td>
			<td><%=order.email%></td>
			<td>¥<%=order.total%></td>
			<td><%=order.created_at%></td>
			<td><%=order.payment_state%></td>
			<td><a href="">查看</a><br>
			<a href="">付款</a><br>
			<a href="" class="disable">确认收货</a><br>
			<a href="" class="disable">退货</a></td>
			<td></td>
			</tr>
			</table>
			</div>
		<% end %>
	<% end %>
<% end %>
</div>
</div>